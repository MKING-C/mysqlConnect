{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",

                "-g",
                "${file}",
                
                // 指定包含目录
                "-I","${workspaceFolder}/include",
                "-I","C:/software/mysql/MySQL/MySQL Server 8.0/include",
                "-I","${workspaceFolder}/src",
                "-I","C:\\software\\jsoncpp/include",

                // 指定库目录文件
                "-L","C:/software/mysql/MySQL/MySQL Server 8.0/lib", 
                "-L","C:\\software\\jsoncpp\\lib",
                // 通过 -l 链接库
                "-llibmysql",
                "-lmysqlclient",
                "-ljsoncpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",

            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}